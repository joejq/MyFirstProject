
@{
    ViewBag.Title = "校园社团-选择入口";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
<style>
    #container {
        width: 600px;
        height: 300px;
        margin: auto;
        margin-top: 100px;
        margin-bottom: 100px;
        text-align: center;
    }

    .img {
        width: 200px;
        height: 200px;
        box-shadow: 0px 0px 1px grey;
    }

        .img:hover {
            box-shadow: 0px 0px 4px #0b51eb;
            cursor: pointer;
        }
        .txt{
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
        }
</style>
    <script>
        function select(way) {
            if (way == "web") {
                location.href = '@Url.Action("Index")';
            } else if (way == "bot") {
                location.href = "http://service-bot.azurewebsites.net";
            }
        }
    </script>
    }
<div id="container">
    <div style="font-size: 25px;">Select the way you want……</div>
    <table style="width: 100%;height: 100%;margin-top: 30px;">
        <tr>
            <td style="text-align: center;"><div class="pic_con" onclick="select('web')"><img src="~/Content/images/default/web.png" alt="" class="img" /></div></td>
            <td style="text-align: center"><div class="pic_con" onclick="select('bot')"><img src="~/Content/images/default/bot.png" alt="" class="img" /></div></td>
        </tr>
        <tr>
            <td class="txt" onclick="select('web')">网站</td>
            <td class="txt" onclick="select('web')">服务Bot</td>
        </tr>
    </table>
</div>

